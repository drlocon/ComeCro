<% if like.favorited_by?(current_user) %>
  <%= link_to like_favorites_path(like), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= like.favorites.count %>
  <% end %>
<% else %>
  <%= link_to like_favorites_path(like), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= like.favorites.count %>
  <% end %>
<% end %>
